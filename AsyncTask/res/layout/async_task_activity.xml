<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
        >
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
              android:gravity="top"
              android:id="@+id/async_edit_text"/>
    <Button android:layout_width="100dp" android:layout_height="wrap_content"
            android:text="Start Task"
            android:id="@+id/async_button"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/async_text_view"
            />
</LinearLayout>


